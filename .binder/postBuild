#!/bin/bash

echo ">>> Starting Binder postBuild setup"

# Create Jupyter kernel
python -m ipykernel install --user --name cube4health-binder \
  --display-name "Cube4Health (Binder)"

# Pre-warm Matplotlib font cache to avoid warnings on first import
python - <<EOF
import matplotlib
matplotlib.get_cachedir()
EOF

echo ">>> Binder postBuild completed successfully"
